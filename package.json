{
  "name": "ecommerce-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,prisma}\"",
    "db:generate": "turbo run generate",
    "db:push": "turbo run db:push",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@vitest/ui": "^4.0.18",
    "husky": "^9.1.7",
    "prettier": "latest",
    "prettier-plugin-prisma": "^5.0.0",
    "turbo": "latest",
    "vitest": "^4.0.18"
  }
}
